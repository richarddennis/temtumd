{
  "compilerOptions": {
    "diagnostics": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es2015.core", "es6", "es7"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/commands",
    "**/*.test.ts",
    "**/__mocks__/*"
  ]
}
